-- First I get this Dataset from KAGGLE website in EXCEL format. I emport this Dataset In My SQL Server for Cleaning and Managing.
----------------------------------------------------------------------------------------------------------------------------------
-- Lookout what exact dataset is? --

SELECT * 
FROM ABC;

---------------------------------------------------------------------------------------------------------------------------------
-- STARTED CLEANING--
-- FIND OUT ANY NULL VALUE WITHIN COLUMN BY COLUMN --

SELECT *
FROM ABC
WHERE Customer_Age IS NULL;

-- IF NULL VALUE FINDS --
UPDATE TABLE ABC
SET CUSTOMER_AGE = 0
WHERE  CUSTOMER_AGE IS NULL;

-------------------------------------------------------------------------------------------------------------------------------
-- THEN FIND OUT ANY DUPLICATE RECORDS COLUMN BY COLUMN --

SELECT Customer_ID, COUNT(Customer_ID) AS DuplicateRanks
FROM ABC
GROUP BY Customer_ID
HAVING COUNT(Customer_ID)>1;


-------------------------------------------------------------------------------------------------------------------------------
-- ARRENGE ALL RECORDS IN PROPER ORDER --
-- ARRENDE ALL RECORS ARRENGE BY PURCHASE DATE --

SELECT * FROM ABC
ORDER BY Purchase_Date;
-------------------------------------------------------------------------------------------------------------------------------



